# Meowko Configuration Example
# Copy this file to config.yaml and fill in your API keys

# Locale setting (affects date/time formatting)
locale: "zh_CN.UTF-8"

# Discord Bot Token
discord:
  token: "your-discord-bot-token-here"
  # Delay between split messages (in seconds). Set to 0 to disable.
  message_delay: 0.5

# Shared System Prompts
# Markdown files under data_dir/prompts/, prepended to all persona prompts.
prompts:
  # - "rules.md"
  # - "style.md"

# LLM Providers
# Each provider has a name, base_url, api_key, and a list of models.
# Models include context_window, max_tokens, and pricing (per 1M tokens).
providers:
  - name: openai
    base_url: "https://api.openai.com/v1"
    api_key: "your-openai-api-key-here"
    models:
      - name: gpt-4o-mini
        context_window: 128000
        max_tokens: 4096
        pricing:
          input: 0.15      # $0.15 per 1M input tokens
          cached: 0.075    # $0.075 per 1M cached input tokens
          output: 0.60     # $0.60 per 1M output tokens
      - name: gpt-4o
        context_window: 128000
        max_tokens: 4096
        pricing:
          input: 2.50
          cached: 1.25
          output: 10.00

  - name: xai
    base_url: "https://api.x.ai/v1"
    api_key: "your-xai-api-key-here"
    models:
      - name: grok-4-1-fast-non-reasoning
        context_window: 2000000
        max_tokens: 8192
        pricing:
          input: 0.20
          cached: 0.05
          output: 0.50

# LLM Settings
# Specify which model to use in format: provider/model
llm:
  model: openai/gpt-4o-mini
  timeout: 120

# Text-to-Image Settings
# Model format: provider/model (uses the same providers list above).
# Leave model empty to disable TTI.
# api: "images" uses /v1/images/generations (DALL-E, etc.)
#      "chat"   uses /v1/chat/completions  (GPT-4o image gen, etc.)
tti:
  model: "openai/dall-e-3"
  api: "images"
  # size: "1024x1024"  # Optional: omit for providers that don't support it
  # quality: "auto"    # Optional: omit for providers that don't support it
  timeout: 120

# Soniox STT Settings
soniox:
  api_key: "your-soniox-api-key-here"
  model: "stt-async-preview"          # Batch STT model
  streaming_model: "stt-rt-preview"   # Realtime STT model
  # language_hints: ["en"]  # Optional: auto-detected if empty

# ElevenLabs Settings (TTS only)
elevenlabs:
  api_key: "your-api-key-here"
  default_voice_id: "21m00Tcm4TlvDq8ikWAM"  # Rachel
  model_id: "eleven_turbo_v2_5"
  # language: "en"  # Optional: auto-detected if empty
  timeout: 120
  voice_settings:
    stability: 0
    similarity_boost: 0.5
    style: 0
    use_speaker_boost: true
    speed: 1.2

# Context Settings
context:
  compaction_threshold: 0.9
  # Template for date/weather info on empty conversations
  # Available variables: {date}, {weather}
  info_template: "Today is {date}. Weather: {weather}."

# Memory Settings
memory:
  rollup_time: "03:00"
  timezone: "Asia/Shanghai"

# Voice Settings
voice:
  endpointing_ms: 500

# Scheduler
scheduler:
  tick_interval: 60

# Weather Settings
# Configure location for weather API. Timezone auto-detected from system if not set.
weather:
  latitude: 39.9906    # Default: Beijing
  longitude: 116.2887
  # timezone: "Asia/Shanghai"  # Optional: auto-detected from system if not set

# Data Paths
paths:
  data_dir: "~/.meowko"
  personas_dir: personas
  state_dir: state
  conversations_dir: conversations
  memories_dir: memories
  cache_dir: cache
  logs_dir: logs
