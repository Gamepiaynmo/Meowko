# Meowko Configuration Example
# Copy this file to config.yaml and fill in your API keys

# Discord Bot Token
discord:
  token: "your-discord-bot-token-here"
  # Delay between split messages (in seconds). Set to 0 to disable.
  message_delay: 0.5

# LLM Settings
llm:
  base_url: "https://api.openai.com/v1"
  api_key: "your-api-key-here"
  model: "gpt-4o-mini"
  context_window: 262144
  max_tokens: 4096
  # Pricing per 1M tokens (in USD). Used for cost tracking.
  pricing:
    input: 0.15      # $0.15 per 1M input tokens
    cached: 0.075    # $0.075 per 1M cached input tokens
    output: 0.60     # $0.60 per 1M output tokens

# ElevenLabs Settings
elevenlabs:
  api_key: "your-api-key-here"
  default_voice_id: "21m00Tcm4TlvDq8ikWAM"  # Rachel
  model_id: "eleven_turbo_v2_5"

# Brave Search
brave:
  api_key: "your-api-key-here"
  search_count: 5

# Context Settings
context:
  max_tokens: 8000
  compaction_threshold: 0.9

# Memory Settings
memory:
  daily_retention: 5
  monthly_retention: 3
  rollup_time: "03:00"
  timezone: "Asia/Singapore"

# Voice Settings
voice:
  endpointing_ms: 500
  push_to_talk: false
  sample_rate: 48000
  channels: 2

# Scheduler
scheduler:
  tick_interval: 60

# Data Paths
paths:
  data_dir: "~/.meowko"
  personas_dir: personas
  state_dir: state
  conversations_dir: conversations
  memories_dir: memories
  cache_dir: cache/attachments
  logs_dir: logs
